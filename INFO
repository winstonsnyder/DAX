-- Document Meausres

EVALUATE
     VAR _measures = 
	 SELECTCOLUMNS(
		INFO.MEASURES(),
		"Measure", [Name],
		"Desc", [Description],
		"DAX formula", [Expression],
		"TableID", [TableID]
	 )
	 
	 VAR _tables = 
	 	SELECTCOLUMNS(
			INFO.TABLES(),
			"TableID", [ID],
			"Table", [Name]
		)
		
	VAR _combined = 
		NATURALLEFTOUTERJOIN(_measures, _tables)
		
	RETURN
		SELECTCOLUMNS(
			_combined,
			"Measure", [Measure],
			"Desc", [Desc],
			"DAX Formula", [DAX formula],
			"Home Table", [Table]
		)
